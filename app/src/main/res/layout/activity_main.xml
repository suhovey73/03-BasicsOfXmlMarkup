<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tvCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/center"
        android:background="#0FAFFF"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/viewTop"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:background="#FF0000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tvCenter"
        android:layout_marginBottom="20dp"/>

    <View
        android:id="@+id/viewBottom"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#00FF00" />

    <View
        android:id="@+id/viewStart"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/tvCenter"
        android:background="#FF7F00" />

    <View
        android:id="@+id/viewEnd"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:background="#007FFF"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tvCenter"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/topStartParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#7F7F0FFF"
        android:padding="4dp"
        android:text="@string/topstart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topStartParent"
        android:layout_toStartOf="@+id/topEndParent"
        android:layout_toEndOf="@+id/topStartParent"
        android:gravity="center"
        android:background="#7F00FF7F"
        android:padding="4dp"
        android:text="@string/topcenter"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/topEndParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="#7F7F00"
        android:padding="4dp"
        android:text="@string/topend"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viewStart"
        android:layout_alignTop="@+id/viewTop"
        android:background="#7f0066ff"
        android:padding="4dp"
        android:text="@string/censtart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/viewTop"
        android:layout_alignEnd="@id/viewEnd"
        android:background="#7fff00ff"
        android:padding="4dp"
        android:text="@string/cenend"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/botStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viewStart"
        android:layout_alignBottom="@+id/viewBottom"
        android:background="#7f00ff50"
        android:padding="4dp"
        android:text="@string/botstart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/botEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/viewEnd"
        android:layout_alignBottom="@+id/viewBottom"
        android:background="#7f550055"
        android:padding="4dp"
        android:text="@string/botend"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/botStartParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#7f00ffff"
        android:padding="4dp"
        android:text="@string/botstartparent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/botEndParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#7f55ff11"
        android:padding="4dp"
        android:text="@string/botendparent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botStartParent"
        android:layout_below="@+id/viewBottom"
        android:layout_alignStart="@+id/botStart"
        android:layout_alignEnd="@+id/botEnd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#7f000077"
            android:padding="4dp"
            android:text="@string/botcenter"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>


</RelativeLayout>